@model CSharpUdemy_MVC.Models.ViewModels.SellerFormViewModel;
@{
    ViewData["Title"] = "Adicionar Vendedor";
}


<h3 class="text-center">@ViewData["Title"]</h3>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
                    <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Nome:</label>
                <input asp-for="Seller.Name" class="form-control" placeholder="Ex: Joao da Silva"/>

            </div>
             <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Email:</label>
                <input asp-for="Seller.Email" class="form-control" placeholder="joaoDaSilva@exemplo.com"/>
            </div>
             <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">Data de Nascimento:</label>
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">Salário base:</label>
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="3500.00"/>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Departamento:</label>
                <select asp-for="Seller.DepartmentId" class="form-control" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))"></select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Cancelar</a>
            </div>

        </form>

    </div>
</div>
