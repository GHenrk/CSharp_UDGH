@{
    ViewData["Title"] = "Vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class-"form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Busca simples:</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label forfor="maxDate" class="col-lg-2 control-label"> Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
               
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-dark">Buscar</button>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="col-md-6">
        <form class-"form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Busca Agrupada:</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label forfor="maxDate" class="col-lg-2 control-label"> Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-dark">Buscar</button>
                </div>
            </fieldset>
        </form>
    </div>

</div>